.btn__chat
  z-index 1000
  width 60px
  height 60px
  position fixed
  bottom 25px
  right 25px
  color #fff
  font-size 25px
  border-radius 50px
  outline none !important
  background-color main-blue
  transition 0.4s
  cursor pointer
  box-shadow 0 6px 10px 0 #666
  display flex
  justify-content center
  align-items center
  border none

  &:hover
    box-shadow 0 6px 14px 0 #666
    transform scale(1.05)

  svg.close
    width 20px

  svg.open
    width 31px

  .done
    display none
